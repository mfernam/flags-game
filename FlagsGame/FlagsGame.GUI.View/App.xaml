<Application x:Class="FlagsGame.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" StartupUri="/MainWindow.xaml">
 
    <Application.Resources>
        
        <ResourceDictionary >
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/StringResource.xaml" />
                <ResourceDictionary Source="Resources/StringResource.en-US.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <BitmapImage UriSource="Resources\Images\{0}.png" x:Key="flagImage"></BitmapImage>
        </ResourceDictionary>
        
        
    </Application.Resources>
    
</Application>
