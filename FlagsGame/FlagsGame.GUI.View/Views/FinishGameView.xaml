<Window x:Class="FlagsGame.GUI.View.Views.FinishGameView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FlagsGame.GUI.View.Views"
        mc:Ignorable="d"
        Title="{DynamicResource game_finish}" Height="198" Width="234" Loaded="Window_Loaded" Background="#FF35D1EA" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="{DynamicResource game_finish}" HorizontalAlignment="Left" Height="39" VerticalAlignment="Top" Width="172" FontSize="20" FontWeight="Bold"/>
        <Button Content="{DynamicResource accept}" HorizontalAlignment="Left" Height="35" Margin="67,117,0,0" VerticalAlignment="Top" Width="77" Name="btnAccept" Click="btnAccept_Click" Background="#FF0969A0"/>
        <TextBox HorizontalAlignment="Left" Height="30" Margin="104,60,0,0" Text="Player name" TextWrapping="Wrap" VerticalAlignment="Top" Width="86" Name="txtName"/>
        <Label Content="{DynamicResource name}" HorizontalAlignment="Left" Height="30" Margin="39,60,0,0" VerticalAlignment="Top" Width="47" Name="lblName"/>

    </Grid>
</Window>
