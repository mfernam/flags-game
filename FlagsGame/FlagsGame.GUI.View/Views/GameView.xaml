        <Button Content="{DynamicResource america}" HorizontalAlignment="Left" Margin="299,97,0,0" Name="america" VerticalAlignment="Top" Height="50" Width="100" Click="btnContinent_Click" FontWeight="Bold" FontSize="16" Background="#FF5EC7EE"/>
        <Button Content="{DynamicResource oceania}" HorizontalAlignment="Left" Margin="199,165,0,0" Name="oceania" VerticalAlignment="Top" Height="50" Width="100" Click="btnContinent_Click" FontWeight="Bold" FontSize="16" Background="#FF5EC7EE"/>
        <Button Content="{DynamicResource all}" HorizontalAlignment="Left" Margin="299,165,0,0" Name="btnAll" VerticalAlignment="Top" Height="50" Width="100" Click="btnAll_Click" FontWeight="Bold" FontSize="16" Background="#FF9CCBDC"/>
        <Button Content="{DynamicResource back}" HorizontalAlignment="Left" Height="50" Margin="441,256,0,0" VerticalAlignment="Top" Width="100" Name="btnBack" Click="btnBack_Click" FontWeight="Bold" FontSize="16" Background="#FFECE492"/>


    </Grid>
</UserControl>
