<UserControl x:Class="FlagsGame.GUI.View.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlagsGame.GUI.View.Views"
             mc:Ignorable="d" Height="400" Width="550">
    <Grid>
        <Button Content="{DynamicResource africa}" HorizontalAlignment="Left" Margin="99,97,0,0" Name="africa" VerticalAlignment="Top" Height="50" Width="100" Click="btnContinent_Click" FontWeight="Bold" FontSize="16" Background="#FF5EC7EE" />
        <Button Content="{DynamicResource asia}" HorizontalAlignment="Left" Margin="99,165,0,0" Name="asia" VerticalAlignment="Top" Height="50" Width="100" Click="btnContinent_Click" FontWeight="Bold" FontSize="16" Background="#FF5EC7EE"/>
